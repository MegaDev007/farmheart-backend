# .env.example
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=farmheart_db
DB_USER=farmheart_user
DB_PASSWORD=farmheart2025
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Security
BCRYPT_SALT_ROUNDS=12
VERIFICATION_CODE_EXPIRES_MINUTES=30

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://farmheartvirtual.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/farmheart.log

# Second Life Integration
SL_VERIFICATION_OBJECT_UUID=your-sl-object-uuid-here
SL_API_TIMEOUT=30000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@farmheartvirtual.com